<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center" android:orientation="vertical" android:padding="32dp">
    <ImageView android:id="@+id/emptyImageView" android:layout_width="150dp" android:layout_height="150dp"
        android:contentDescription="@null" android:src="@drawable/ic_plant" app:tint="?attr/colorOutline" />
    <TextView android:id="@+id/emptyTitleTextView" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="24dp" android:textAppearance="?attr/textAppearanceTitleLarge" android:textColor="?attr/colorOnSurface" />
    <TextView android:id="@+id/emptyDescriptionTextView" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="8dp" android:gravity="center" android:textAppearance="?attr/textAppearanceBodyMedium" android:textColor="?attr/colorOnSurfaceVariant" />
    <com.google.android.material.button.MaterialButton android:id="@+id/actionButton" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="24dp" android:visibility="gone" />
</LinearLayout>
