<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center" android:orientation="vertical" android:padding="32dp">
    <ImageView android:id="@+id/errorImageView" android:layout_width="120dp" android:layout_height="120dp"
        android:contentDescription="@null" android:src="@drawable/ic_error" app:tint="?attr/colorError" />
    <TextView android:id="@+id/errorTitleTextView" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="24dp" android:text="@string/error_occurred" android:textAppearance="?attr/textAppearanceTitleLarge" android:textColor="?attr/colorOnSurface" />
    <TextView android:id="@+id/errorDescriptionTextView" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="8dp" android:gravity="center" android:textAppearance="?attr/textAppearanceBodyMedium" android:textColor="?attr/colorOnSurfaceVariant" />
    <com.google.android.material.button.MaterialButton android:id="@+id/retryButton" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="24dp" android:text="@string/retry" />
</LinearLayout>
